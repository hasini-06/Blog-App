<%= form_with model: @post ,local: true do |form| %> 
    <div>  
        <%=form.label :title%><br>
        <%=form.text_field :title%>
    </div>

    <div>
        <%=form.label :description%><br>
        <%=form.text_area :description%>
    </div> 

    <div>
        <%=form.submit @post.new_record? ? 'Create Post' : 'update Post'%>
    </div> 
<%end%>