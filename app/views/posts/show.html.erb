<h3><%= @post.title %></h3>

<h3>Comments:</h3>
<ul>
    
  <li>
  <%= @post.description%>

  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.description %><br>
      <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
      <%= button_to 'Delete', post_comment_path(@post, comment),
            method: :delete,
            data: { turbo_confirm: "Delete this comment?" } %>
    </li>
  <% end %>
</ul>

<h4>Add a Comment:</h4>

<%= form_with model: [@post, @post.comments.build], local: true do |form| %>
  <div>
    <%= form.label :description, "Comment" %><br>
    <%= form.text_area :description, rows: 3 %>
  </div>

<div>
    <%= form.submit "Add Comment" %>
  </div>
<% end %>
<br>
<%= link_to 'Back', posts_path %> <br>
<%= link_to 'Edit Post', edit_post_path(@post) %>
<%= button_to 'Delete Post', post_path(@post),
      method: :delete,
      data: { turbo_confirm: "Are you sure you want to delete this post?" } %>

